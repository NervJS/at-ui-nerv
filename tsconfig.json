{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "Nerv.createElement",
    "paths": {
        "@md/*": ["site/markdown/*"],
        "@lib/*":["libs/*"],
        "@src/*":["src/*"]
    }
  },
  "include": [
    "src",
    "site"
  ],
  "exclude": [
    "node_modules",
    ".dist",
    "siteoutput",
    "tests",
    "jest",
    "__tests__",
    "**/*.test.ts"
  ],
  "compileOnSave": false
}
